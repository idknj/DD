<script>
document.addEventListener('DOMContentLoaded', function() {
// FAQ Accordion
const faqButtons = document.querySelectorAll('section:nth-of-type(7) button');
faqButtons.forEach(button => {
button.addEventListener('click', function() {
const content = this.nextElementSibling;
const icon = this.querySelector('i');
if (content.style.display === 'none' || content.style.display === '') {
content.style.display = 'block';
icon.classList.remove('ri-arrow-down-s-line');
icon.classList.add('ri-arrow-up-s-line');
} else {
content.style.display = 'none';
icon.classList.remove('ri-arrow-up-s-line');
icon.classList.add('ri-arrow-down-s-line');
}
});
});
// Hide all FAQ contents initially except the first one
const faqContents = document.querySelectorAll('section:nth-of-type(7) button + div');
faqContents.forEach((content, index) => {
if (index !== 0) {
content.style.display = 'none';
}
});
// Update the first FAQ button icon
const firstFaqIcon = faqButtons[0].querySelector('i');
firstFaqIcon.classList.remove('ri-arrow-down-s-line');
firstFaqIcon.classList.add('ri-arrow-up-s-line');
});
document.addEventListener('DOMContentLoaded', function() {
// Mobile Menu Toggle
const mobileMenuButton = document.querySelector('header button');
const mobileMenu = document.createElement('div');
mobileMenu.className = 'fixed inset-0 bg-primary z-50 flex flex-col items-center justify-center transform translate-x-full transition-transform duration-300';
mobileMenu.innerHTML = `
<button class="absolute top-4 right-4 text-white">
<i class="ri-close-line ri-2x"></i>
</button>
<nav class="text-center">
<ul class="space-y-6">
<li><a href="#" class="text-white text-2xl font-medium">Home</a></li>
<li><a href="#" class="text-white text-2xl font-medium">About</a></li>
<li><a href="#" class="text-white text-2xl font-medium">Menu</a></li>
<li><a href="#" class="text-white text-2xl font-medium">Gallery</a></li>
<li><a href="#" class="text-white text-2xl font-medium">Contact</a></li>
</ul>
</nav>
`;
document.body.appendChild(mobileMenu);
mobileMenuButton.addEventListener('click', function() {
mobileMenu.classList.toggle('translate-x-full');
document.body.classList.toggle('overflow-hidden');
});
const closeButton = mobileMenu.querySelector('button');
closeButton.addEventListener('click', function() {
mobileMenu.classList.add('translate-x-full');
document.body.classList.remove('overflow-hidden');
});
// Close mobile menu when clicking on a link
const mobileMenuLinks = mobileMenu.querySelectorAll('a');
mobileMenuLinks.forEach(link => {
link.addEventListener('click', function() {
mobileMenu.classList.add('translate-x-full');
document.body.classList.remove('overflow-hidden');
});
});
});
</script>
</body>
</html>
